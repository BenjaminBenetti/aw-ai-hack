{
  "tasks": {
    "dev": "deno run --watch main.ts",
    "build": "deno run --allow-read --allow-write --allow-net --allow-run --allow-env build.ts",
    "bundle": "deno run --allow-read --allow-write --allow-net --allow-run --allow-env build.ts",
    "build:watch": "deno run --allow-read --allow-write --allow-net --allow-run --allow-env --watch=src/ build.ts"
  },
  "imports": {
    "react": "https://esm.sh/react@18.3.1",
    "react-dom": "https://esm.sh/react-dom@18.3.1",
    "react/jsx-runtime": "https://esm.sh/react@18.3.1/jsx-runtime",
    "react-dom/client": "https://esm.sh/react-dom@18.3.1/client",
    "openmeteo": "npm:openmeteo"
  },
  "nodeModulesDir": "none",
  "compilerOptions": {
    "strict": false,
    "lib": [
        "dom",
        "dom.iterable",
        "deno.ns"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
